/* Tablet Styles */

 @media (max-width: 1023px) {
  body::-webkit-scrollbar {
    width: 0;
  }
    
  .shipping {
      text-align: center;
    }

  .header {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 10px 20px;
  }
  
  .nav {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color:rgb(39, 3, 53) ;
    width: 100%;
    flex-grow: 2;
  }
  
  .navLinks {
    display: none;
  }
  
  .icons {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-grow: 1;
  }
  
  .addProductBtn {
    display: none;
  }
  
  #cartBtn {
    font-size: 20px;
  }
  
  .jewelleryDiv, .electronicsDiv, .womenDiv, .menDiv {
    display: flex;
  }
  
  .imagegrid{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    padding: 20px;

  }
  .logo-text {
    font-size: 24px;
    padding: 5px;
  }

   .footer {
    display: grid;
    grid-template-columns: (2 1fr);
    gap: 10px;
    padding: 5px;
  } 
  
  .formProduct {
    margin: 20px;
  }
  
  .form {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: 0 auto;
    max-width: 600px;
  }
  
  .label {
    font-weight: bold;
  }
  
  .submitProductBtn {
    margin: 20px auto;
  }

 }

  